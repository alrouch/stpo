Приложения для вывода данных с контроллера 
Создать свой “Монитор порта”
Сделать управление светодиодом при помощи Bluetooth HC-05
Управление сервоприводом при помощи Bluetooth HC-05
Код: 
BluetoothSerial SerialBT;

void setup() {
  Serial.begin(115200);
  Serial2.begin(9600, SERIAL_8N1, 16, 17);
  SerialBT.begin("Mega_LED_Control");
}


void loop() {
  if (SerialBT.available()) {
    char btCommand = SerialBT.read();
    Serial.print(btCommand);
 
    Serial2.write(btCommand);
    Serial.print(btCommand);
    if (btCommand == '1') {
      SerialBT.println("LED ON - команда отправлена на Mega");
    } else if (btCommand == '0') {
      SerialBT.println("LED OFF - команда отправлена на Mega");
    }
  }
 
  delay(100);
}

//Код для MEGA
#define LED_PIN 13  // Пин светодиода


void setup() {
    Serial.begin(9600);
    Serial2.begin(115200);
   
    // Настраиваем светодиод
    pinMode(LED_PIN, OUTPUT);
    digitalWrite(LED_PIN, LOW);
   
    Serial.println("Система запущена");
    Serial.println("Жду команды 1 или 0 от Serial2...");
}


void loop() {
    if (Serial2.available()) {
        char command = Serial2.read();  // Считываем команду
       
        // Передаем команду в Serial Monitor
        Serial.write(command);
       
        // Управляем светодиодом
        if (command == '1') {
            digitalWrite(LED_PIN, HIGH);
            Serial.println(" - Светодиод ВКЛЮЧЕН");
        }
        else if (command == '0') {
            digitalWrite(LED_PIN, LOW);
            Serial.println(" - Светодиод ВЫКЛЮЧЕН");
        }
        else {
            Serial.println(" - Неизвестная команда");
        }
    }
}
